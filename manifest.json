{
  "name": "Auto Skip Youtube Ads",
  "description": "Auto Skip Youtube Ads",
  "version": "1.0.0",
  "action": {
    "default_icon": "img/icon.png",
    "default_popup": "pop-up.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "run_at": "document_end",
      "js": [
        "js/content-script.js"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "*://*.youtube.com/*"
  ],
  "manifest_version": 3
}